<h1><%= t '.articles' %></h1>

<%= link_to t('.new') , new_article_path, class: 'btn btn-primary' %>

<div class="table-responsive default-padding-top">
  <div class="text-right">
    <%= page_entries_info @articles %>
  </div>
  <table class="table">
    <tr>
      <th><%= t '.title' %></th>
      <th><%= t '.text' %></th>
      <th colspan="3"></th>
    </tr>
    <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to t('application.show'), article_path(article) %></td>
          <td><%= link_to t('application.edit'), edit_article_path(article) %></td>
          <td><%= link_to t('application.destroy'), article_path(article), method: :delete, title: t('application.confirm'), data: {confirm: t('.confirm'), commit: t('application.commit'), cancel: t('application.cancel') } %></td>
        </tr>
    <% end %>
  </table>
  <div class="text-center">
    <%= will_paginate @articles %>
  </div>
</div>

<%= link_to t('application.back'), root_path , class: 'btn btn-default' %>